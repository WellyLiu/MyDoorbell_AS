<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9e1ee"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pnp_tip_7"
            android:textColor="#00a4b5"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:src="@drawable/do_you_get_the_door_phone_password" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:gravity="center" >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:gravity="center" 
        >
        <Button
            android:id="@+id/door_phone_add_pwd"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button_shape_style_pnp_1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/pnp_tip_8"
            android:textColor="@color/white"
            android:layout_marginBottom="17.5dp"
            android:textSize="16sp" />
        
         <Button
            android:id="@+id/door_phone_add_pwd_no"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/button_shape_style_pnp_1"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/pnp_tip_9"
            android:textColor="@color/white"
            android:textSize="16sp" />
         
    </LinearLayout>
</LinearLayout>
    

</LinearLayout>
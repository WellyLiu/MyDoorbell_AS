<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9e1ee"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rename"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/nortek_account_name" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="right|center_vertical"
            android:text="Mary Wang" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_bg_color"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/nortek_account_pwd" />
    </LinearLayout>

     
    
    <ImageView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_bg_color"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_bg_color"
        android:scaleType="fitXY" />

    
     <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#00a4b5"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="@string/all_account_status"
        android:textColor="@color/aliceblue" />

    <ListView
		android:divider="@color/btn_bg_color"
		android:dividerHeight="1dp"
		android:id="@+id/odp_list"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0px"
	/>
    
   

</LinearLayout>
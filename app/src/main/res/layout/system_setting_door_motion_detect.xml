<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9e1ee"
    android:orientation="vertical" >
    

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#00a4b5"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="@string/split_screen_view"
        android:textColor="@color/aliceblue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="60dp" >

        <ImageView
            android:id="@+id/bg_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/motion_detect_bg_top" >
        </ImageView>

        <!-- 子布局由代码动态生成 -->

        <LinearLayout
            android:id="@+id/layout_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bg_top"
            android:background="#EAEAEE"
            android:orientation="vertical"
            android:padding="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_more"
            android:src="@drawable/motion_detect_bg_bottom" >
        </ImageView>
    </RelativeLayout>
 
       
        
   
    
</LinearLayout>

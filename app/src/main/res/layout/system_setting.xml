<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9e1ee"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#00a4b5"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="App Settings"
        android:textColor="@color/aliceblue" />

    <LinearLayout
        android:id="@+id/user_ringtone"
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/ring_tone"
            android:textColor="#231815" />

        <TextView
            android:id="@+id/select_ringtone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="Default"
            android:textColor="#5e5e5e" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_bg_color"
        android:scaleType="fitXY" />

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/mic_volume"
        android:layout_width="match_parent"
        android:layout_height="48dp" 
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/mic_volume"
            android:textColor="#231815" />

        <TextView
            android:id="@+id/mic_volume_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="5"
            android:textColor="#231815" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_bg_color"
        android:scaleType="fitXY" />
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/software_aec_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:text="@string/enable_software_aec_module"
            android:textColor="#231815" />

        <CheckBox
            android:id="@+id/enable_software_aec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="end|center_vertical"
            android:textColor="#231815" />
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/btn_bg_color"
        android:scaleType="fitXY" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#00a4b5"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="@string/nortek_doorbell_setting"
        android:textColor="@color/aliceblue" />

    <ListView
		android:divider="@color/btn_bg_color"
		android:dividerHeight="1dp"
		android:id="@+id/odp_list"
		android:layout_weight="1"
		android:layout_width="match_parent"
		android:layout_height="0px"
	/>

</LinearLayout>